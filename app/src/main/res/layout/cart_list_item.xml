<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--date-->
        <TextView
            android:id="@+id/summary_date_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartlist_header_order"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/temp_order_summary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/summary_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartlist_header_order"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/temp_order_summary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            />

           <!--tea name-->
        <TextView
            android:id="@+id/summary_name_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summary_date_key"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/temp_order_name"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/summary_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summary_date_value"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/temp_order_name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            />

        <!--quantity-->
        <TextView
            android:id="@+id/summary_quantity_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summary_name_key"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/temp_order_quantity"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/summary_quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summary_name_value"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/temp_order_quantity"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            />


        <!--total price-->
        <TextView
            android:id="@+id/summary_totalprice_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summary_quantity_key"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/temp_order_price"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/summary_totalprice_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summary_quantity_value"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/temp_order_price"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"/>

        <!--<View-->
            <!--android:layout_width="300dp"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_below="@id/summary_totalprice_value"-->
            <!--android:background="@android:color/darker_gray"-->
            <!--/>-->

    </RelativeLayout>


</android.support.v7.widget.CardView>
