<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentConfimationActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_centerInParent="true"
        app:cardElevation="15dp"
        app:cardCornerRadius="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <!--total price-->
            <TextView
                android:id="@+id/confirm_total_price_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="Total Price"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirm_totalprice_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cartlist_header_order"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="@string/temp_order_summary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                />

            <!--payment details-->
            <TextView
                android:id="@+id/confirm_payment_details_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm_total_price_key"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="Payment Details"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirm_payment_details_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm_totalprice_value"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="@string/temp_order_name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                />

            <!--payment details-->
            <TextView
                android:id="@+id/confirm_payment_status_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm_payment_details_key"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="Status"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirm_payment_status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm_payment_details_value"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="@string/temp_order_name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                />






        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>